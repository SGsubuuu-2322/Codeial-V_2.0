<link rel="stylesheet" href="/css/signin.css" />
<h1>Sign-in Page</h1>

<form action="/users/create-session" method="post" class="form">
  <input
    type="email"
    name="email"
    placeholder="Enter your email..."
    required
    autofocus
  />
  <input
    type="password"
    name="password"
    placeholder="Enter your password..."
    required
    autofocus
  />
  <button type="submit">Sign In</button>
</form>
